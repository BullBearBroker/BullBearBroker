# CODEx: plantilla de variables para el backend BullBearBroker
# CODEx: define el entorno activo (local, staging, production)
APP_ENV=local
# CODEx: puerto HTTP que expondrá FastAPI
API_PORT=8000
# CODEx: dominios permitidos para CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# CODEx: cadena de conexión SQLAlchemy para la base de datos
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/bullbear
# CODEx: endpoint de Redis usado por rate limiting y caché
REDIS_URL=redis://localhost:6379/0

# CODEx: parámetros criptográficos para JWT
JWT_SECRET=CAMBIAR_POR_SECRETO
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# CODEx: claves Web Push para notificaciones
VAPID_PUBLIC_KEY=CAMBIAR_CLAVE_PUBLICA
VAPID_PRIVATE_KEY=CAMBIAR_CLAVE_PRIVADA
VAPID_SUBJECT=mailto:admin@bullbearbroker.local
