{
  "name": "bullbearbroker-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "analyze:client": "ANALYZE=true next build && open .next/analyze/client.html",
    "analyze:report": "pnpm run analyze && pnpm exec lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "build:start": "next build && next start -p 4000",
    "lighthouse:desktop": "lighthouse http://localhost:4000/dashboard --preset=desktop --quiet --chrome-flags='--headless --no-sandbox' --output=json --output-path=./.lighthouse/dashboard-desktop.json",
    "lighthouse:mobile": "lighthouse http://localhost:4000/dashboard --preset=mobile --quiet --chrome-flags='--headless --no-sandbox' --output=json --output-path=./.lighthouse/dashboard-mobile.json",
    "lh:all": "pnpm build:start & sleep 2 && pnpm lighthouse:desktop && pnpm lighthouse:mobile && kill %1 || true",
    "lint": "NODE_OPTIONS=--no-warnings eslint . --no-warn-ignored",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "format": "pnpm lint:fix && pnpm prettier:write",
    "typecheck": "tsc --noEmit",
    "test": "jest -c jest.config.local.cjs --runInBand --passWithNoTests",
    "test:dev": "jest --config jest.config.dev.cjs",
    "test:ci": "jest -c jest.config.local.cjs --ci --runInBand --passWithNoTests",
    "test:watch": "jest --config jest.config.dev.cjs --watch",
    "test:alerts": "jest --config jest.config.dev.cjs src/components/alerts/__tests__/alerts-panel.test.tsx",
    "test:esm": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:e2e": "pnpm exec playwright test --config=playwright.config.ts",
    "e2e": "playwright test --config=playwright.config.ts",
    "e2e:server": "next dev",
    "// QA 2.7-I": "helpers para ejecutar e2e con server manual",
    "// QA 2.0:test:e2e": "Playwright usa pnpm exec para respetar workspace",
    "test:e2e:ui": "playwright test --ui --config=playwright.config.ts",
    "test:e2e:report": "playwright show-report"
  },
  "// CODEx: scripts": "Resolved merge conflict and aligned playwright/test commands with pnpm workflow.",
  "// CODEx:typecheck": "Added explicit TypeScript typecheck script for CI consistency.",
  "// ðŸ”§ Added missing dependency \"critters\" required by Next.js 15 build": "",
